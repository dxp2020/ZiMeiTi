<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="715px"
        android:layout_height="1080px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700px">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_zhangguofu" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="60px"
                android:background="#FF2C00"
                android:gravity="center"
                android:minWidth="80px"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="80px" />

            <TextView
                android:id="@+id/tv_chen_wei"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60px"
                android:layout_marginRight="20px"
                android:background="@drawable/shape_red_circle"
                android:gravity="center"
                android:text="孤胆英雄"
                android:textColor="#ffffff"
                android:textSize="60px" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:background="#F8E4EA"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_line3"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:text="第二任（1911~1930）"
                android:textColor="#BC4030"
                android:textSize="58px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_line1"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="#FF2C00"
                android:gravity="center"
                android:text="赖永泽"
                android:textColor="#FFFFFF"
                android:textSize="60px" />

            <TextView
                android:id="@+id/tv_line2"
                android:layout_width="match_parent"
                android:layout_height="220px"
                android:background="#2C2B2C"
                android:gravity="center"
                android:text="江西于都人\n开过少将，享年86岁"
                android:textColor="#ffffff"
                android:textSize="55px" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>